{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet: build",
            "type": "shell",
            "command": [
                "dotnet",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/shell/Songhay.Publications.Tests"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [Songhay.Publications.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/Songhay.Publications.Tests/Songhay.Publications.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": []
        }
    ]
}